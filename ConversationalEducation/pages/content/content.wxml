<scroll-view scroll-y="true" scroll-top="{{top}}">
  <view wx:for="{{readContents}}">
    <view class='message' wx:if="{{item.type == 2}}">
      <image src='{{item.image}}'></image>
      <view class="triangle"></view>
      <text>{{item.text}}</text>
    </view>

    <view class="content" wx:else>
      <image src='{{teacherHeadSculpture}}'></image>
      <view class="triangle"></view>
      <navigator url='../../pages/add-note/add-note?contentText={{item.text}}&contentId={{item.id}}'>
        <text data-content="{{item.text}}">{{item.text}}</text>
      </navigator>
    </view>
  </view>
</scroll-view>
<view class='footer'>
  <input bindinput='message' value="{{currentMessage}}"></input>
  <button class='post' type='primary' lang='zh_CN' bindtap="postMessage">发送</button>
  <image class='next' src='/assets/images/next.png' bindtap='nextContent'></image>
</view>