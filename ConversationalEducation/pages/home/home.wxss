page {
  background-color: #eee;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #fff;
  padding: 10rpx 0rpx 20rpx 0rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.body {
  margin-top: 10rpx;
  background-color: #eee;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bottom {
  font-size: 35rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
}

.bottom::after {
  border-radius: 5rpx;
  border-width: 0rpx 0rpx 1rpx 0rpx;
  border-color: #333;
}

.course {
  display: flex;
  height: 150rpx;
  line-height: 150rpx;
  text-align: left;
  font-size: 35rpx;
  background-color: #fff;
  margin: 10rpx;
  border-radius: 10rpx;
  border-color: #333;
}

.course image {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
  border-radius: 25%;
}

.course text {
  margin-left: 20rpx;
}

.course .num {
  color: #999;
  font-size: 30rpx;
  position: absolute;
  top: 0rpx;
  right: 20rpx;
}