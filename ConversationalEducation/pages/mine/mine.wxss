page {
  background-color: #eeeeee;
}

button::before {
  border: none;
}

button {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #ffffff;
  margin: 5rpx;
  border-radius: 5rpx;
  border-width: 1rpx 0rpx 0rpx 0rpx;
}

button .image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 25%;
  position: absolute;
  top: 10rpx;
  right: 50rpx;
}

button .arrow {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 44rpx;
  right: 10rpx;
}

button .option {
  font-size: 30rpx;
}

button .content {
  position: absolute;
  right: 50rpx;
  font-size: 24rpx;
  color: #aaaaaa;
}

.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

/* 对话框 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.25;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  margin: -180rpx 105rpx;
  z-index: 9999;
  background: #ffffff;
  border-radius: 12rpx;
  padding-bottom: 25rpx;
}

.modal-title {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #030303;
  text-align: center;
}

.modal-content button {
  font-size: 24rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.modal-content button::after{
  border-radius: 5rpx;
  border-width: 0rpx 0rpx 1rpx 0rpx;
}

.modal-content button image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 30rpx;
  right: 10rpx;
}