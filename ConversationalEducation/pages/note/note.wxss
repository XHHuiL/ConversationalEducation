page {
  background-color: #eeeeee;
}

.body {
  margin-top: 10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

button::before {
  border: none;
}

button {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  text-align: left;
  background-color: #ffffff;
  margin: 10rpx;
  border-radius: 10rpx;
  border-color: #333333;
  padding: 10rpx;
}

button text {
  line-height: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 15rpx;
  color: #333333;
}

button .note {
  margin-left: 30rpx;
  line-height: 35rpx;
  font-size: 25rpx;
  font-weight: normal;
  color: #666666;
}

